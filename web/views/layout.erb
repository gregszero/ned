<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
  <meta name="theme-color" content="#16a34a" media="(prefers-color-scheme: light)">
  <meta name="theme-color" content="#09090b" media="(prefers-color-scheme: dark)">
  <meta name="description" content="Ned — Bot in the Chair">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
  <title>Ned — Bot in the Chair</title>
  <link rel="manifest" href="/manifest.json">
  <link rel="icon" href="/icon.svg" type="image/svg+xml">
  <link rel="apple-touch-icon" href="/icon-192.png">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            'ned-bg': 'var(--background)',
            'ned-fg': 'var(--foreground)',
            'ned-muted': 'var(--muted)',
            'ned-muted-fg': 'var(--muted-foreground)',
            'ned-accent': 'var(--primary)',
            'ned-accent-fg': 'var(--primary-foreground)',
            'ned-border': 'var(--border)',
            'ned-card': 'var(--card)',
            'ned-primary': 'var(--primary)',
            'ned-ring': 'var(--ring)',
          },
          fontFamily: {
            sans: ['"Inter"', 'system-ui', 'sans-serif'],
          },
          borderRadius: {
            DEFAULT: '0.375rem',
          },
        },
      },
    }
  </script>
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4/dist/chart.umd.min.js"></script>
  <script src="/js/ned-components.js"></script>
  <script type="module" src="/js/application.js"></script>
</head>
<body class="h-dvh flex flex-col overflow-hidden">
  <input type="checkbox" id="sidebar-toggle">

  <!-- Sidebar -->
  <div class="sidebar-container">
    <label for="sidebar-toggle"></label>
    <aside class="sidebar">
      <div class="text-ned-primary font-semibold text-lg tracking-tight mb-6">Ned</div>
      <nav class="flex flex-col gap-0.5">
        <% Ai::AiPage.published.recent.each do |page| %>
          <a href="/<%= page.slug %>" onclick="if(window.chatFooter){chatFooter.openCanvas(<%= page.id %>, '<%= page.title.gsub("'", "\\\\'") %>', '<%= page.slug %>');return false}"><%= page.title %></a>
        <% end %>
      </nav>
    </aside>
  </div>

  <!-- Navbar -->
  <header class="flex items-center justify-between px-4 h-14 border-b border-ned-border shrink-0">
    <label for="sidebar-toggle" class="nav-trigger">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </label>
    <span class="text-ned-primary font-semibold text-lg tracking-tight">Ned</span>
    <div class="relative" data-controller="notifications">
      <button type="button" class="icon ghost relative" data-action="click->notifications#toggle">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
        </svg>
        <% if (unread = Ai::Notification.unread.count) > 0 %>
          <span id="notifications-badge" class="notification-badge absolute -top-1 -right-1"><%= unread %></span>
        <% else %>
          <span id="notifications-badge" class="notification-badge absolute -top-1 -right-1 hidden">0</span>
        <% end %>
      </button>
      <div class="notifications-dropdown" data-notifications-target="dropdown" style="display:none">
        <div class="notifications-dropdown-header">
          <span class="text-sm font-semibold">Notifications</span>
        </div>
        <div id="notifications-list" class="notifications-dropdown-list" data-notifications-target="list">
          <div class="p-4 text-center text-ned-muted-fg text-xs">Loading...</div>
        </div>
        <div data-notifications-target="loadMore" style="display:none" class="notifications-dropdown-footer">
          <button type="button" class="ghost xs w-full" data-action="click->notifications#loadMore">Load more</button>
        </div>
      </div>
    </div>
  </header>

  <!-- Canvas area -->
  <div class="flex-1 overflow-hidden relative">
    <!-- Regular page content (turbo-frame replaced) -->
    <turbo-frame id="canvas-content" class="block h-full overflow-y-auto">
      <main class="page-content max-w-7xl mx-auto p-6 w-full">
        <%= yield %>
      </main>
    </turbo-frame>

    <!-- Per-conversation canvas overlays -->
    <div id="conversation-canvases"></div>
  </div>

  <!-- Chat Footer -->
  <div class="chat-footer" data-controller="chat-footer">
    <!-- Resize handle -->
    <div class="chat-footer-handle" data-action="mousedown->chat-footer#startResize touchstart->chat-footer#startResize"></div>

    <!-- Canvas tabs (top level) -->
    <div class="chat-tab-bar canvas-level" data-chat-footer-target="tabBar">
      <div class="chat-tabs" data-chat-footer-target="canvasTabs"></div>
      <button class="chat-tab-new ghost xs" data-action="click->chat-footer#newTab" type="button" title="New canvas">+</button>
    </div>
    <!-- Conversation tabs (bottom level, scoped to active canvas) -->
    <div class="chat-tab-bar conversation-level" data-chat-footer-target="conversationTabBar" style="display:none">
      <div class="chat-tabs" data-chat-footer-target="conversationTabs"></div>
      <button class="chat-tab-new ghost xs" data-action="click->chat-footer#newConversation" type="button" title="New conversation">+</button>
    </div>

    <!-- Panels container -->
    <div class="chat-panels" data-chat-footer-target="panels"></div>
  </div>

  <script>
    if ('serviceWorker' in navigator) {
      navigator.serviceWorker.register('/sw.js');
    }
    // Close sidebar when clicking overlay or a nav link
    document.addEventListener('click', function(e) {
      var toggle = document.getElementById('sidebar-toggle');
      if (!toggle || !toggle.checked) return;
      if (e.target.matches('.sidebar-container > label') || e.target.closest('.sidebar nav a')) {
        toggle.checked = false;
      }
    });
    // Hide canvas overlays when turbo-frame content loads (non-canvas pages like jobs, settings)
    document.addEventListener('turbo:frame-load', function(e) {
      if (e.target.id === 'canvas-content') {
        document.querySelectorAll('.conversation-canvas.active').forEach(function(c) {
          c.classList.remove('active');
        });
      }
    });
  </script>

  <!-- Canvas context menu (singleton) -->
  <div id="canvas-context-menu" class="canvas-context-menu" style="display:none">
    <div id="canvas-context-menu-items"></div>
  </div>
</body>
</html>
