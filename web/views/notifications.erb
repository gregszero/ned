<div class="max-w-5xl mx-auto space-y-6" data-controller="notifications">
  <h2 class="text-2xl font-semibold tracking-tight">Notifications</h2>

  <div id="notifications-list" class="space-y-3">
    <% if @notifications.any? %>
      <% @notifications.each do |notification| %>
        <%= render_notification_card_html(notification) %>
      <% end %>
    <% else %>
      <div class="card text-center">
        <p class="text-ned-muted-fg">No notifications yet.</p>
      </div>
    <% end %>
  </div>
</div>
