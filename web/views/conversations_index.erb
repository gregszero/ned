<div class="flex flex-col h-[calc(100dvh-10rem)]">
  <div class="flex-1 overflow-y-auto space-y-4 pb-4">
    <h2 class="text-3xl font-bold">Conversations</h2>

    <% if @conversations.empty? %>
      <div class="hero bg-base-200 rounded-box py-16">
        <div class="hero-content text-center">
          <p class="text-lg text-base-content/60">No conversations yet. Type a message below to start one!</p>
        </div>
      </div>
    <% else %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @conversations.each do |conversation| %>
          <a href="/conversations/<%= conversation.id %>" class="card bg-base-100 shadow-md hover:shadow-xl hover:-translate-y-1 transition-all duration-200 cursor-pointer">
            <div class="card-body">
              <div class="flex justify-between items-start">
                <h3 class="card-title text-lg"><%= conversation.title || "Conversation ##{conversation.id}" %></h3>
                <div class="badge badge-outline badge-sm"><%= conversation.source %></div>
              </div>
              <div class="flex gap-3 text-sm text-base-content/50">
                <span><%= conversation.messages.count %> messages</span>
                <span><%= conversation.last_message_at&.strftime('%b %d, %Y %I:%M %p') %></span>
              </div>
              <% if conversation.messages.any? %>
                <p class="text-sm text-base-content/60 mt-1">
                  <%= conversation.messages.last.truncated_content(100) %>
                </p>
              <% end %>
            </div>
          </a>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="shrink-0 pt-2">
    <form action="/conversations" method="post" class="flex gap-2">
      <input type="text" name="content" placeholder="Message Ned..." required autofocus
             class="input input-bordered flex-1 min-w-0 text-base">
      <button type="submit" class="btn btn-primary shrink-0">Send</button>
    </form>
  </div>
</div>
